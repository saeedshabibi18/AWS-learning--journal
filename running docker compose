=========================================================
ğŸ“ docker-compose.yml
services:
  python_app:
    image: python:3.11
    container_name: python_container
    command: python -c "print('Python container running')"

  mysql_db:
    image: mysql:8.0
    container_name: mysql_container
    environment:
      MYSQL_ROOT_PASSWORD: root

